<script>
  document.querySelectorAll(".flex").forEach(function (flex) {
    flex.addEventListener("click", function () {
        // Retrieve the closest parent UL of the clicked .flex
        const ul = this.closest('ul');

        // Toggle active class on list items within the same UL
        ul.querySelectorAll(".list-show").forEach(function (li) {
            li.classList.toggle("active");
        });

        // The SVG within the clicked .flex element
        const svg = this.querySelector('svg');

        // Check if any list item is active to determine rotation state
        if (ul.querySelector(".list-show.active")) {
            svg.style.transform = "rotate(180deg)";
        } else {
            svg.style.transform = "rotate(0deg)";
        }
    });
});

</script>
