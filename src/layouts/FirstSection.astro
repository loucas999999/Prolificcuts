// css colors
const WhiteColor = "#FAF9F6";
const BlackColor = "#000";
const YellowColor = "#E6C03B";
const GreyColor = "#8E8E8E";
---

<style define:vars={{ WhiteColor, BlackColor, YellowColor, GreyColor }}>
  /* Bebas Neue */
  @import url("https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap");
  /* Inter */
  @import url("https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@100..900&display=swap");

  header {
    position: fixed;
    z-index: 999;
    display: flex;
    justify-content: space-between;
    padding: 1rem;
    background: rgba(121, 121, 121, 0.85);
    border-radius: 0 0 10px 10px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(6.3px);
    -webkit-backdrop-filter: blur(6.3px);
    border: 1px solid rgba(121, 121, 121, 0.3);
  }
  nav {
    font-family: "Inter", sans-serif;
    display: none;
    flex-direction: column;
    position: absolute;
    top: 60px;
    right: 0;
    width: 100%;
    text-align: left;
    background: rgba(121, 121, 121, 0.85);
    border-radius: 0 0 10px 10px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(6.3px);
    -webkit-backdrop-filter: blur(6.3px);
    border: 1px solid rgba(121, 121, 121, 0.3);
  }

  nav ul {
    list-style: none;
    padding: 0;
  }

  nav li {
    padding: 1rem;
  }

  nav li a {
    text-decoration: none;
    color: black;
    font-weight: bold;
  }

  .menu-expanded nav#right-menu {
    display: flex;
    opacity: 1;
  }

  .menu-expanded-left nav#left-menu {
    display: flex;
    opacity: 1;
  }

  /* svg {
    fill: black;
    height: 100%;
    display: flex;
    align-items: center;
  } */

  img {
    max-width: 30%;
    height: auto;
  }

  .first__section {
    position: relative;
    /* background: rgb(28, 28, 28);
    background: radial-gradient(
      circle,
      rgb(55, 55, 55) 0%,
      rgba(0, 0, 0, 1) 100%
    ); */
    background-image: url(../assets/il_1588xN.2897386211_d1ef.png);
    background-size: cover;
  }

  .main__heading {
    height: 80vh;
    position: relative;
    display: flex;
    align-items: center;
  }

  h1 {
    font-family: 'Angel';
    font-size: 3rem;
    text-align: center;
    line-height: 0.9;
    color: white;
    text-shadow: 0px 0px 20px rgba(0, 0, 0, 0.6);
  }

  p {
    font-family: "Inter", sans-serif;
    text-align: center;
    font-size: 1rem;
    font-weight: 900;
    color: var(--BlackColor);
    text-transform: uppercase;
    text-shadow: 0px 0px 20px rgba(0, 0, 0, 0.6);
  }

  button {
    display: block;
    margin: 0 auto;
    margin-top: 1rem;
    font-size: 1.3rem;
    font-family: "Bebas Neue", sans-serif;
    border: none;
    background-color: orange;
    cursor: pointer;
    border-radius: 0.25rem;
    color: var(--WhiteColor);
    padding: 0.25rem 1rem;
    text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.6);
    -webkit-box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.75);
    -moz-box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.75);
    box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.75);
  }

  a {
    text-decoration: none;
  }

  /* Text Animation */
  .marquee {
    display: flex;
    overflow: hidden;
    user-select: none;
    gap: 2rem;
  }

  .marquee__group {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    padding-bottom: 1rem;
    min-width: 100%;
    animation: scroll 15s linear infinite;
  }

  .marquee__group span {
    color: var(--BlackColor);
    font-size: 5vw;
    font-weight: 900;
    white-space: nowrap;
    font-family: "Syne", sans-serif !important;
    text-transform: uppercase;
  }

  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(calc(-100% - 2rem));
    }
  }

  @media only screen and (min-width: 360px) {
    .marquee__group span {
      font-size: 6.5vw;
    }
  }
</style>

