---
import "../styles/global.css";
import { Image } from "astro:assets";
import ProlificLogo from "../assets/White-Logo.png";
// import Bandana from "../assets/il_1588xN.2897386211_d1ef.png";
import CamPic1 from "../assets/A7305188.jpg";
import CamPic2 from "../assets/A7305192.jpg";
import CamPic3 from "../assets/A7305184.jpg";

// css colors
const WhiteColor = "#FAF9F6";
const BlackColor = "#000";
const YellowColor = "#E6C03B";
const GreyColor = "#8E8E8E";
---

<style define:vars={{ WhiteColor, BlackColor, YellowColor, GreyColor }}>
  /* Bebas Neue */
  @import url("https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap");
  /* Inter */
  @import url("https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@100..900&display=swap");

  header {
    position: fixed;
    z-index: 999;
    display: flex;
    justify-content: space-between;
    padding: 1rem;
  }

  svg {
    fill: white;
  }

  header img {
    max-width: 30%;
    height: auto;
  }

  .first__section {
    position: relative;
    /* background: rgb(28, 28, 28);
    background: radial-gradient(
      circle,
      rgb(55, 55, 55) 0%,
      rgba(0, 0, 0, 1) 100%
    ); */
    background-color: black;
  }

  .main__heading {
    height: 50vh;
    position: relative;
    display: flex;
    align-items: center;
  }

  h1 {
    font-family: "Angel";
    font-size: 4rem;
    text-align: center;
    line-height: 0.9;
    color: var(--WhiteColor);
  }

  p {
    font-family: "Inter", sans-serif;
    text-align: center;
    font-size: 1rem;
    font-weight: 900;
    color: var(--WhiteColor);
    padding-top: 1rem;
    text-transform: uppercase;
    text-shadow: 0px 0px 10px rgba(255, 255, 255, 0.6);
  }

  button {
    display: block;
    margin: 0 auto;
    margin-top: 1rem;
    font-size: 1.3rem;
    font-family: "Bebas Neue", sans-serif;
    border: none;
    background-color: darkkhaki;
    cursor: pointer;
    border-radius: 0.25rem;
    color: var(--WhiteColor);
    padding: 0.25rem 1rem;
  }

  a {
    text-decoration: none;
  }

  .marquee__three {
    display: flex;
    overflow: hidden;
    gap: 1rem;
  }

  .marquee__three img {
    max-width: 200px;
    height: auto;
    border-radius: 0.5rem;
  }

  .marquee__group__three {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    gap: 1rem;
    animation: scroll 40s linear infinite;
  }

  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-100%);
    }
  }
</style>

<section class="first__section">
  <header>
    <a href="#" id="menu-toggle-left">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
      >
        <path
          d="m20.487 17.14-4.065-3.696a1.001 1.001 0 0 0-1.391.043l-2.393 2.461c-.576-.11-1.734-.471-2.926-1.66-1.192-1.193-1.553-2.354-1.66-2.926l2.459-2.394a1 1 0 0 0 .043-1.391L6.859 3.513a1 1 0 0 0-1.391-.087l-2.17 1.861a1 1 0 0 0-.29.649c-.015.25-.301 6.172 4.291 10.766C11.305 20.707 16.323 21 17.705 21c.202 0 .326-.006.359-.008a.992.992 0 0 0 .648-.291l1.86-2.171a.997.997 0 0 0-.085-1.39z"
        ></path>
      </svg>
    </a>
    <Image src={ProlificLogo} alt="BarberShops Logo" />
    <a href="#" id="menu-toggle">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        height="24"
        viewBox="0 96 960 960"
        width="24"
      >
        <path
          d="M120 816v-60h720v60H120Zm0-210v-60h720v60H120Zm0-210v-60h720v60H120Z"
        ></path>
      </svg>
    </a>
  </header>

  <div class="main__heading">
    <div class="second-main__heading">
      <h1>Prolific Cuts Barbershop</h1>
      <p></p>
      <a href="https://prolificuts.setmore.com"><button>Book Now</button></a>
    </div>
  </div>

  <div class="marquee__three">
    <div class="marquee__group__three">
      <Image src={CamPic1} alt="Pic1" />
      <Image src={CamPic2} alt="Pic2" />
      <Image src={CamPic3} alt="Pic3" />
    </div>
    <div class="marquee__group__three">
      <Image src={CamPic1} alt="Pic1" />
      <Image src={CamPic2} alt="Pic2" />
      <Image src={CamPic3} alt="Pic3" />
    </div>
  </div>
</section>
