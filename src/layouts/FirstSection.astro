---
import "../styles/global.css";
import { Image } from "astro:assets";
import ProlificLogo from "../assets/Prolific-logo.png";
import Bandana from "../assets/il_1588xN.2897386211_d1ef.png";

// css colors
const WhiteColor = "#FAF9F6";
const BlackColor = "#000";
const YellowColor = "#E6C03B";
const GreyColor = "#8E8E8E";
---

<style define:vars={{ WhiteColor, BlackColor, YellowColor, GreyColor }}>
  /* Bebas Neue */
  @import url("https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap");
  /* Inter */
  @import url("https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@100..900&display=swap");

  header {
    position: fixed;
    z-index: 999;
    display: flex;
    justify-content: space-between;
    padding: 1rem;
    background-color: white;
    background: rgba(255, 255, 255, 0.5);
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border-radius: 0 0 20px 20px;
    border: 1px solid rgba(255, 255, 255, 0.18);
  }

  svg {
    fill: black;
  }

  img {
    max-width: 30%;
    height: auto;
  }

  .first__section {
    position: relative;
    /* background: rgb(28, 28, 28);
    background: radial-gradient(
      circle,
      rgb(55, 55, 55) 0%,
      rgba(0, 0, 0, 1) 100%
    ); */
    background-image: url(../assets/il_1588xN.2897386211_d1ef.png);
    background-size: cover;
  }

  .main__heading {
    height: 70vh;
    position: relative;
    display: flex;
    align-items: center;
  }

  h1 {
    font-family: "Bebas Neue", sans-serif;
    font-size: 3rem;
    text-align: center;
    line-height: 0.9;
    color: orange;
    text-shadow: 4px 4px 2px rgba(0,0,0,0.6);
  }

  p {
    font-family: "Inter", sans-serif;
    text-align: center;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--BlackColor);
  }

  button {
    display: block;
    margin: 0 auto;
    margin-top: 1rem;
    font-size: 1.3rem;
    font-family: "Bebas Neue", sans-serif;
    border: none;
    background-color: orange;
    cursor: pointer;
    border-radius: 0.25rem;
    color: var(--WhiteColor);
    padding: 0.25rem 1rem;
  }

  a {
    text-decoration: none;
  }

  /* Text Animation */
  .marquee {
    display: flex;
    overflow: hidden;
    user-select: none;
    gap: 2rem;
  }

  .marquee__group {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    padding-bottom: 1rem;
    min-width: 100%;
    animation: scroll 15s linear infinite;
  }

  .marquee__group span {
    color: var(--BlackColor);
    font-size: 5vw;
    font-weight: 900;
    white-space: nowrap;
    font-family: "Syne", sans-serif !important;
    text-transform: uppercase;
  }

  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(calc(-100% - 2rem));
    }
  }

  @media only screen and (min-width: 360px) {
    .marquee__group span {
      font-size: 6.5vw;
    }
  }
</style>

<section class="first__section">
  <!-- <Image src={ Bandana } alt="bandana"> -->
  <header>
    <a href="">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
